<UserControl x:Class="MaticeApp.UCDeterminanty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaticeApp"
             mc:Ignorable="d" 
             d:Background="#FFE6E6E6"
             d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8,10,10,50">

                <local:PageTitle>
                    <local:PageTitle.TitleContent>
                        <TextBlock Text="Determinanty"/>
                    </local:PageTitle.TitleContent>
                </local:PageTitle>

                <local:PagePanel>
                    <TextBlock TextWrapping="Wrap">
                        Determinant je skalárna hodnota, ktorá je priradená ku štvorcovej matici 
                        a poskytuje dôležité informácie o tejto matici, ako aj o lineárnej transformácii, 
                        ktorú matica reprezentuje. 
                        Determinant môže byť použitý na overenie regulárnosti matice,
                        hadanie inverznej matice a reišenie systémov lineárnych rovníc.
                    </TextBlock>
                </local:PagePanel>

                <local:PageParagraph>
                    <local:PageParagraph.Title>
                        <TextBlock Text="Definícia"/>
                    </local:PageParagraph.Title>
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap">
                            Determinantom štvorcovej matice <local:MatrixNameSpan Text="A"/> = (<local:MatrixElementSpan Text="a_ij"/>) 
                            stupňa <Italic>n</Italic> je číslo |<local:MatrixNameSpan Text="A"/>|, pre ktoré platí:
                        </TextBlock>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                                1.
                            </TextBlock>

                            <TextBlock Grid.Row="0" Grid.Column="1">
                                <Italic>n</Italic> = 1: |<local:MatrixNameSpan Text="A"/>| = <local:MatrixElementSpan Text="a_11"/>
                            </TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                2.
                            </TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="1">
                                <Italic>n</Italic> = 2: |<local:MatrixNameSpan Text="A"/>| =
                                <local:MatrixElementSpan Text="a_11"/> ⋅ <local:MatrixElementSpan Text="a_22"/> -
                                <local:MatrixElementSpan Text="a_12"/> ⋅ <local:MatrixElementSpan Text="a_21"/>
                            </TextBlock>

                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,10,0">
                                3.
                            </TextBlock>

                            <StackPanel Grid.Row="2" Grid.Column="1">
                                <TextBlock>
                                    <Italic>n</Italic> > 1:
                                </TextBlock>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                            
                                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" Text="3.1."/>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,5">
                                        <TextBlock Text="Rozvoj podľa 1-ho riadka:"/>

                                        <Grid Margin="0,0,0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                    
                                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,3">
                                                |<local:MatrixNameSpan Text="A"/>| =
                                            </TextBlock>
                                    
                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="16" FontStyle="Italic" Text="n" Margin="0,0,0,-5"/>
                                                <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="25" FontWeight="Light" Text="∑">
                                                    <TextBlock.RenderTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform ScaleX="2" ScaleY="1.5"/>
                                                            <TranslateTransform X="-8" Y="-11"/>
                                                        </TransformGroup>
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                                <TextBlock Grid.Row="2" FontSize="16" HorizontalAlignment="Center" Margin="0,1,0,0">
                                                    <Italic>j</Italic>=1
                                                </TextBlock>
                                            </Grid>
                                    
                                            <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0">
                                                (-1)<local:SuperscriptSpan Text="1+j"/> ⋅
                                                <local:MatrixElementSpan Text="a_1j"/> ⋅
                                                |<local:MatrixNameSpan Text="A_1j"/>| =
                                            </TextBlock>
                                        </Grid>
                                
                                        <TextBlock>
                                            = <local:MatrixElementSpan Text="a_11"/> ⋅ |<local:MatrixNameSpan Text="A_11"/>| -
                                            <local:MatrixElementSpan Text="a_12"/> ⋅ |<local:MatrixNameSpan Text="A_12"/>| +
                                            <local:MatrixElementSpan Text="a_13"/> ⋅ |<local:MatrixNameSpan Text="A_13"/>| - ... +
                                            (-1)<local:SuperscriptSpan Text="1+n"/> ⋅
                                           <local:MatrixElementSpan Text="a_1n"/> ⋅ |<local:MatrixNameSpan Text="A_1n"/>|
                                        </TextBlock>
                                
                                    </StackPanel>
                            
                                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" Text="3.2."/>

                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,5">
                                        <TextBlock>
                                            Rozvoj podľa <Italic>i</Italic>-teho riadka:
                                        </TextBlock>

                                        <Grid Margin="0,0,0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,3">
                                                |<local:MatrixNameSpan Text="A"/>| =
                                            </TextBlock>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="16" FontStyle="Italic" Text="n" Margin="0,0,0,-5"/>
                                                <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="25" FontWeight="Light" Text="∑">
                                                    <TextBlock.RenderTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform ScaleX="2" ScaleY="1.5"/>
                                                            <TranslateTransform X="-8" Y="-11"/>
                                                        </TransformGroup>
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                                <TextBlock Grid.Row="2" FontSize="16" HorizontalAlignment="Center" Margin="0,1,0,0">
                                                    <Italic>j</Italic>=1
                                                </TextBlock>
                                            </Grid>

                                            <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0">
                                                (-1)<local:SuperscriptSpan Text="i+j"/> ⋅
                                                <local:MatrixElementSpan Text="a_ij"/> ⋅
                                                |<local:MatrixNameSpan Text="A_ij"/>| =
                                            </TextBlock>

                                        </Grid>

                                        <TextBlock>
                                            = (-1)<local:SuperscriptSpan Text="i+1"/> ⋅
                                            <local:MatrixElementSpan Text="a_i1"/> ⋅
                                            |<local:MatrixNameSpan Text="A_i1"/>| +
                                            (-1)<local:SuperscriptSpan Text="i+2"/> ⋅
                                            <local:MatrixElementSpan Text="a_i2"/> ⋅
                                            |<local:MatrixNameSpan Text="A_i2"/>| + ... +
                                            (-1)<local:SuperscriptSpan Text="i+n"/> ⋅
                                            <local:MatrixElementSpan Text="a_in"/> ⋅
                                            |<local:MatrixNameSpan Text="A_in"/>|
                                        </TextBlock>
                                
                                    </StackPanel>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,10,0" Text="3.3."/>

                                    <StackPanel Grid.Row="2" Grid.Column="1">
                                        <TextBlock>
                                            Rozvoj podľa <Italic>j</Italic>-teho stĺpca:
                                        </TextBlock>

                                        <Grid Margin="0,0,0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,3">
                                                |<local:MatrixNameSpan Text="A"/>| =
                                            </TextBlock>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="16" FontStyle="Italic" Text="n" Margin="0,0,0,-5"/>
                                                <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="25" FontWeight="Light" Text="∑">
                                                    <TextBlock.RenderTransform>
                                                        <TransformGroup>
                                                            <ScaleTransform ScaleX="2" ScaleY="1.5"/>
                                                            <TranslateTransform X="-8" Y="-11"/>
                                                        </TransformGroup>
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                                <TextBlock Grid.Row="2" FontSize="16" HorizontalAlignment="Center" Margin="0,1,0,0">
                                                    <Italic>i</Italic>=1
                                                </TextBlock>
                                            </Grid>

                                            <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0">
                                                (-1)<local:SuperscriptSpan Text="i+j"/> ⋅
                                                <local:MatrixElementSpan Text="a_ij"/> ⋅
                                                |<local:MatrixNameSpan Text="A_ij"/>| =
                                            </TextBlock>

                                        </Grid>

                                        <TextBlock>
                                            = (-1)<local:SuperscriptSpan Text="1+j"/> ⋅
                                            <local:MatrixElementSpan Text="a_1j"/> ⋅
                                            |<local:MatrixNameSpan Text="A_1j"/>| +
                                            (-1)<local:SuperscriptSpan Text="2+j"/> ⋅
                                            <local:MatrixElementSpan Text="a_2j"/> ⋅
                                            |<local:MatrixNameSpan Text="A_2j"/>| + ... +
                                            (-1)<local:SuperscriptSpan Text="n+j"/> ⋅
                                            <local:MatrixElementSpan Text="a_nj"/> ⋅
                                            |<local:MatrixNameSpan Text="A_nj"/>|
                                        </TextBlock>
                                
                                    </StackPanel>

                                </Grid>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </local:PageParagraph>

                <local:PageParagraph>
                    <local:PageParagraph.Title>
                        <TextBlock Text="Príklad"/>
                    </local:PageParagraph.Title>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    
                        <TextBlock Text="1." Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>

                        <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                            <Italic>n</Italic> = 1: <LineBreak/>
                            <local:MatrixNameSpan Text="A"/> =
                            <InlineUIContainer BaselineAlignment="Center">
                                <local:Matrix x:Name="matrix1" Margin="3,5,15,0"/>
                            </InlineUIContainer>
                            |<local:MatrixNameSpan Text="A"/>| = <local:MatrixElementSpan Text="a_11"/> = -5
                        </TextBlock>

                        <TextBlock Text="2." Grid.Row="1" Grid.Column="0" Margin="0,0,10,0"/>

                        <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                            <Italic>n</Italic> = 2: <LineBreak/>
                            <local:MatrixNameSpan Text="A"/> =
                            <InlineUIContainer BaselineAlignment="Center">
                                <local:Matrix x:Name="matrix2" Margin="3,5,15,0"/>
                            </InlineUIContainer>
                            |<local:MatrixNameSpan Text="A"/>| =
                            (<local:MatrixElementSpan Text="a_11"/> ⋅ <local:MatrixElementSpan Text="a_22"/>) -
                            (<local:MatrixElementSpan Text="a_12"/> ⋅ <local:MatrixElementSpan Text="a_21"/>) =
                            (1 ⋅ 4) - (2 ⋅ 3) = -2
                        </TextBlock>
                    
                        <TextBlock Text="3." Grid.Row="2" Grid.Column="0" Margin="0,0,10,0"/>

                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,10">
                            <TextBlock>
                                <Italic>n</Italic> = 3 (Sarrusovo pravidlo - platí len pre matice 3×3):
                            </TextBlock>
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock VerticalAlignment="Center" Margin="5,0,10,0">
                                    <local:MatrixNameSpan Text="A"/> =
                                </TextBlock>
                                <local:Matrix Grid.Column="1" x:Name="matrix3_0"/>
                                <TextBlock Grid.Column="2" Margin="20,0,0,0" TextWrapping="Wrap">
                                    Prvé dva riadky skopírujeme pod maticu. <LineBreak/>
                                    Sčítame násobky prvkov na troch hlavných diagonálach <LineBreak/>
                                    A odpočítame násobky prvkov na troch vedľajších diagonálach.
                                </TextBlock>
                            </Grid>
                            <local:StackPanelHorizontal Margin="0,10,0,0">
                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,65">
                                    |<local:MatrixNameSpan Text="A"/>| =
                                </TextBlock>
                                <local:Matrix Grid.Row="0" Grid.Column="1" x:Name="matrix3_1"/>
                                <TextBlock Text="=" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,65"/>
                                <Grid Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="20,0,0,39">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="1">
                                        {<Run Text="[1⋅3⋅(-4)]" x:Name="Saurus1"/> + <Run Text="[1⋅5⋅5]" x:Name="Saurus2"/> + <Run Text="[(-2)⋅(-1)⋅3]" x:Name="Saurus3"/>}
                                    </TextBlock>
                                    <TextBlock Text="-" Grid.Row="0" Grid.Column="2" Margin="5,0,0,0"/>
                                    <TextBlock Text="-" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1">
                                        {<Run Text="[5⋅3⋅(-2)]" x:Name="Saurus4"/> + <Run Text="[3⋅5⋅1]" x:Name="Saurus5"/> + <Run Text="[(-4)⋅(-1)⋅1]" x:Name="Saurus6"/>}
                                    </TextBlock>
                                    <TextBlock Text="= 30" Grid.Row="1" Grid.Column="2" Margin="5,0,0,0"/>
                                </Grid>
                            </local:StackPanelHorizontal>
                        </StackPanel>

                        <TextBlock Text="4." Grid.Row="3" Grid.Column="0" Margin="0,0,10,0"/>

                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,10">
                            <TextBlock>
                                <Italic>n</Italic> = 4 (rozvoj podľa 1-ho riadka):
                            </TextBlock>
                            <Grid Margin="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0">
                                    <local:MatrixNameSpan Text="A"/> =
                                </TextBlock>
                                <local:Matrix Grid.Column="1" x:Name="matrix4_0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="15,0,0,0" TextWrapping="Wrap">
                                    Každý prvok <local:MatrixElementSpan Text="a_1j"/> 
                                    v prvom riadku vynásobíme determinantom podmatice <local:MatrixNameSpan Text="A_1j"/> 
                                    ktorú získame z pôvodnej matice <local:MatrixNameSpan Text="A"/> odstránením riadku a stĺpca, 
                                    v ktorom sa vybraný prvok nachádza.
                                    <LineBreak/> Nezabúdame na striedavé znamienka.
                                </TextBlock>

                                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,0,5">
                                    |<local:MatrixNameSpan Text="A"/>| =
                                </TextBlock>
                                <local:Matrix Grid.Row="2" Grid.Column="1" x:Name="matrix4_1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <local:StackPanelHorizontal Grid.Row="2" Grid.Column="2">
                                    <TextBlock Text="=" Margin="10,0,5,5"/>

                                    <local:PopupControl VerticalAlignment="Stretch" x:Name="popup4_1_0">
                                        <local:PopupControl.TriggerElement>
                                            <Border>
                                                <local:HighlightBorder VerticalAlignment="Center" Tag="4_1_0" Margin="0,0,0,4"
                                                                       MouseEnter="HighlightBorder_4_1_MouseEnter"  MouseLeave="HighlightBorder_4_1_MouseLeave">
                                                    <TextBlock> 
                                                        1⋅|<local:MatrixNameSpan Text="A_11"/>|
                                                    </TextBlock>
                                                </local:HighlightBorder>
                                            </Border>
                                        </local:PopupControl.TriggerElement>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,10,63" VerticalAlignment="Center"> 
                                                    |<local:MatrixNameSpan Text="A_11"/>| =
                                            </TextBlock>
                                            <local:Matrix x:Name="matrix4_1_0" VerticalAlignment="Center"/>
                                            <Grid Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,42">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="=" Grid.Row="0" Grid.Column="0" Margin="0,0,20,0"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1">
                                                    [(-13)⋅12⋅(-17)] + [0⋅(-6)⋅(-8)] + [(-18)⋅(-7)⋅(-10)]
                                                </TextBlock>
                                                <TextBlock Text="-" Grid.Row="0" Grid.Column="2" Margin="5,0,0,0"/>
                                                <TextBlock Text="-" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0" HorizontalAlignment="Right"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1">
                                                    [(-8)⋅12⋅(-18)] - [(-10)⋅(-6)⋅(-13)] - [(-17)⋅(-7)⋅0]
                                                </TextBlock>
                                                <TextBlock Text="= 444" Grid.Row="1" Grid.Column="2" Margin="5,0,0,0"/>
                                            </Grid>
                                        </StackPanel>
                                    </local:PopupControl>

                                    <TextBlock Text="-" Margin="5,0,5,5"/>

                                    <local:PopupControl VerticalAlignment="Stretch" x:Name="popup4_1_1">
                                        <local:PopupControl.TriggerElement>
                                            <Border>
                                                <local:HighlightBorder VerticalAlignment="Center" Tag="4_1_1" Margin="0,0,0,4"
                                                                       MouseEnter="HighlightBorder_4_1_MouseEnter" MouseLeave="HighlightBorder_4_1_MouseLeave">
                                                    <TextBlock> 5⋅|<local:MatrixNameSpan Text="A_12"/>|</TextBlock>
                                                </local:HighlightBorder>
                                            </Border>
                                        </local:PopupControl.TriggerElement>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,10,63" VerticalAlignment="Center"> 
                                                    |<local:MatrixNameSpan Text="A_12"/>| =
                                            </TextBlock>
                                            <local:Matrix x:Name="matrix4_1_1" VerticalAlignment="Center"/>
                                            <Grid Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,42">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="=" Grid.Row="0" Grid.Column="0" Margin="0,0,20,0"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1">
                                                    [(-3)⋅12⋅(-17)] + [2⋅(-6)⋅(-8)] + [(-4)⋅(-7)⋅(-10)]
                                                </TextBlock>
                                                <TextBlock Text="-" Grid.Row="0" Grid.Column="2" Margin="5,0,0,0"/>
                                                <TextBlock Text="-" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0" HorizontalAlignment="Right"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1">
                                                    [(-8)⋅12⋅(-4)] - [(-10)⋅(-6)⋅(-3)] - [(-17)⋅(-7)⋅2]
                                                </TextBlock>
                                                <TextBlock Text="= -14" Grid.Row="1" Grid.Column="2" Margin="5,0,0,0"/>
                                            </Grid>

                                        </StackPanel>
                                    </local:PopupControl>

                                    <TextBlock Text="+" Margin="5,0,5,5"/>

                                    <local:PopupControl VerticalAlignment="Stretch" x:Name="popup4_1_2">
                                        <local:PopupControl.TriggerElement>
                                            <Border>
                                                <local:HighlightBorder VerticalAlignment="Center" Tag="4_1_2" Margin="0,0,0,4"
                                                                       MouseEnter="HighlightBorder_4_1_MouseEnter" MouseLeave="HighlightBorder_4_1_MouseLeave">
                                                    <TextBlock> 2⋅|<local:MatrixNameSpan Text="A_13"/>|</TextBlock>
                                                </local:HighlightBorder>
                                            </Border>
                                        </local:PopupControl.TriggerElement>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,10,63" VerticalAlignment="Center"> 
                                                |<local:MatrixNameSpan Text="A_13"/>| =
                                            </TextBlock>
                                            <local:Matrix x:Name="matrix4_1_2" VerticalAlignment="Center"/>
                                            <Grid Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,42">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="=" Grid.Row="0" Grid.Column="0" Margin="0,0,20,0"/>
                                                <TextBlock Grid.Row="0" Grid.Column="1">
                                                    [(-3)⋅0⋅(-17)] + [2⋅(-18)⋅(-8)] + [(-4)⋅(-13)⋅(-10)]
                                                </TextBlock>
                                                <TextBlock Text="-" Grid.Row="0" Grid.Column="2" Margin="5,0,0,0"/>
                                                <TextBlock Text="-" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0" HorizontalAlignment="Right"/>
                                                <TextBlock Grid.Row="1" Grid.Column="1">
                                                    [(-8)⋅0⋅(-4)] - [(-10)⋅(-18)⋅(-3)] - [(-17)⋅(-13)⋅2]
                                                </TextBlock>
                                                <TextBlock Text="= -134" Grid.Row="1" Grid.Column="2" Margin="5,0,0,0"/>
                                            </Grid>

                                        </StackPanel>
                                    </local:PopupControl>

                                    <TextBlock Text="-" Margin="5,0,5,5"/>

                                    <local:PopupControl VerticalAlignment="Stretch" x:Name="popup4_1_3">
                                        <local:PopupControl.TriggerElement>
                                            <Border>
                                                <local:HighlightBorder VerticalAlignment="Center" Tag="4_1_3" Margin="0,0,0,4"
                                                                       MouseEnter="HighlightBorder_4_1_MouseEnter" MouseLeave="HighlightBorder_4_1_MouseLeave">
                                                    <TextBlock> 3⋅|<local:MatrixNameSpan Text="A_14"/>|</TextBlock>
